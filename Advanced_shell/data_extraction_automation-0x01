#!/bin/bash
# Ensure the script is executable: chmod +x parse_pokemon.sh

# Use jq to extract the fields:

jq -r '"\(.name) \(.height) \(.weight) \(.types[0].type.name)"' data.json |

# Use awk to perform unit conversions and format the output.
awk '{
    name = $1; height = $2; weight = $3; type = $4;
    # Convert height (dm) to meters and weight (hg) to kg.
    m_height = height/10;
    kg_weight = weight/10;

    # Capitalize the first letter of the name and type using substr and toupper.
    cap_name = toupper(substr(name,1,1)) substr(name,2);
    cap_type = toupper(substr(type,1,1)) substr(type,2);

    # Print the formatted output.
    printf "%s is of type %s, weighs %dkg, and is %.1fm tall.\n", cap_name, cap_type, kg_weight, m_height;
}'
